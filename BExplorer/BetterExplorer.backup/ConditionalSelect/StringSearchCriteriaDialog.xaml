<Window x:Class="BetterExplorer.StringSearchCriteriaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Search" Height="156" Width="332" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="14,12,0,0" Name="textBlock1" Text="{StaticResource txtSetFilter}" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="14,50,0,0" Name="textBox1" VerticalAlignment="Top" Width="284" />
        <Button Content="{StaticResource txtOK}" Height="23" HorizontalAlignment="Left" Margin="142,82,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Button Content="{StaticResource txtCancel}" Height="23" HorizontalAlignment="Left" Margin="223,82,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="14,30,0,0" x:Name="textBlock2" Text="category" VerticalAlignment="Top" Visibility="Collapsed" />
    </Grid>
</Window>
