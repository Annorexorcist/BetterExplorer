										<Label  Margin="20,0,40,0" Content="Markus Lang" FontSize="14" FontStyle="Italic" FontWeight="Bold" />
										<Label  Margin="20,0,40,0" Content="Aaron Campf" FontSize="14" FontStyle="Italic" FontWeight="Bold" />
										<Label  Margin="20,0,40,0" Content="Jayke R. Huempfner (JaykeBird)" FontSize="14"  FontStyle="Normal" FontWeight="Normal" />
