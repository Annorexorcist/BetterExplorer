				<Ribbon:QuickAccessMenuItem Focusable="False" IsChecked="True" Target="{Binding ElementName=btnPaste}" />
				<Ribbon:QuickAccessMenuItem Focusable="False" IsChecked="True" Target="{Binding ElementName=btnNewTab}" />
				<Ribbon:QuickAccessMenuItem Focusable="False" IsChecked="True" Target="{Binding ElementName=btnTabClone}" />
