<Window x:Class="BetterExplorer.ResizeImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{StaticResource txtResizeImage}" Height="308" Width="262" xmlns:my="clr-namespace:Fluent;assembly=Fluent" Closing="Window_Closing" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
